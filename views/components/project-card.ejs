<div class="card w-10 bg-transparent blur-background-3 border border-white p-2 text-white flex" style="min-height: 100px">
  <div class="card-body position-relative d-flex flex-column p-2">
    <div class="d-flex justify-content-between align-items-center mb-1" style="position: relative">
      <h5 class="card-title text-center w-100 mb-1"><%- title %></h5>
      <% if (pinned) { %>
      <i class="bi bi-pin-angle-fill position-absolute end-0"></i>
      <% } %>
    </div>
    <p class="card-text text-center mb-1" style="flex: 1"><%- description %></p>
    <!-- Buttons block -->
    <div class="center mt-2" style="display: block">
      <% buttons.forEach(function(button) { %>
      <span>
        <a href="<%- button.url %>" class="card-link btn btn-success btn-sm">
          <%- button.text %>
          <% if (button.icon.startsWith('https://')) { %>
          <img src="<%- button.icon %>" alt="<%- button.text %>" style="width: 20px; height: 20px" />
          <% } else { %>
          <i class="bi bi-<%- button.icon %>"></i>
          <% } %>
        </a>
      </span>
      <% }); %>
    </div>
  </div>
</div>
