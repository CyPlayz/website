<div class="container mt-5 pb-4 mb-4">
  <div class="row justify-content-center">
    <div class="col-md-6 text-center">
      <div class="card glassmorphism bg-transparent p-5">
        <div class="card-body text-white">
          <h4 class="display-4"><%= heading %></h2>
            <p class="lead"><%= message %></p>
            <a href="/" class="btn btn-primary"><i class="bi bi-house-door me-2"></i>Go Home</a>
            <a href="<%- (referer === 'null') ? '#' : referer %>" class="btn btn-primary <%- (referer === 'null') ? 'disabled' : '' %>"><i class="bi bi-arrow-left-square me-2"></i>Go Back</a>
            <a href="<%= `https://developer.mozilla.org/en-US/docs/Web/HTTP/Status/${code}` %>" class="btn btn-primary"><i class="bi bi-info-square"></i></a>
        </div>
      </div>
    </div>
  </div>
</div>
